<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffff"
    android:layout_height="match_parent"
    android:id="@+id/swiperefresh"
    tools:context=".ui.gallery.GalleryFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/team1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_height="70dp"
                android:background="#72132b"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:srcCompat="@drawable/stkitts" />

                <TextView
                    android:layout_width="210dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:textSize="20dp"

                    android:textColor="#ffff"
                    android:layout_height="match_parent"

                    android:text="St Kitts" />

                <ImageView
                    android:layout_width="65dp"
                    android:padding="15dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/arrowf" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/team2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#72132b"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="110dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/saints" />

                <TextView

                    android:layout_width="210dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:textSize="20dp"

                    android:textColor="#ffff"
                    android:layout_height="match_parent"

                    android:text="Saint Lucia" />

                <ImageView
                    android:layout_width="65dp"
                    android:padding="15dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/arrowf" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/team3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="6dp"
                android:background="#72132b"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="110dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/trinbago" />

                <TextView

                    android:layout_width="210dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:textSize="20dp"

                    android:textColor="#ffff"
                    android:layout_height="match_parent"

                    android:text="Trinbago" />

                <ImageView

                    android:layout_width="65dp"
                    android:padding="15dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/arrowf" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/team4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="6dp"
                android:background="#72132b"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="110dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/barbados" />

                <TextView

                    android:layout_width="210dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:textSize="20dp"

                    android:textColor="#ffff"
                    android:layout_height="match_parent"

                    android:text="Barbados" />

                <ImageView

                    android:layout_width="65dp"
                    android:padding="15dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/arrowf" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/team5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#72132b"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="110dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/amazon" />

                <TextView

                    android:layout_width="210dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
